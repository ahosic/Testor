<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AuthenticationDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="colorAccent">#DEFFFFFF</item>
        <item name="android:textColorPrimary">@color/textDarkPrimary</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="QuizDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@color/plainWhite</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="HintAppearanceDark" parent="TextAppearance.AppCompat.Medium.Inverse">
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">#8AFFFFFF</item>
    </style>

    <style name="LoginItemTheme" parent="TextAppearance.AppCompat">
        <item name="android:textSize">24sp</item>
        <item name="android:textColorHint">#8AFFFFFF</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">#8AFFFFFF</item>
        <item name="colorControlActivated">#DEFFFFFF</item>
    </style>

    <style name="LoginButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">#FFF</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
    </style>

</resources>
